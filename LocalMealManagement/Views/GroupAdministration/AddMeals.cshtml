@model LocalMealManagement.ViewModel.MealModelView

<div class="shadow custom-board board">
    <form asp-action="AddMeals" class="form-group">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-3">
                    <label asp-for="Morning" class="control-label"></label>
                </div>
                <div class="col-md-9">
                    <input asp-for="Morning" class="form-control" />
                    <span asp-validation-for="Morning" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-3">
                    <label asp-for="Lunch" class="control-label"></label>

                </div>
                <div class="col-md-9">
                    <input asp-for="Lunch" class="form-control" />
                    <span asp-validation-for="Lunch" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-3">
                    <label asp-for="Dinnar" class="control-label"></label>

                </div>
                <div class="col-md-9">
                    <input asp-for="Dinnar" class="form-control" />
                    <span asp-validation-for="Dinnar" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group offset-md-3">
            <input asp-route-subGroupId="@ViewBag.subGroupId" asp-route-groupId="@ViewBag.groupId" asp-route-date="@ViewBag.dateTime" type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
